/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.flex {
      display: flex;
      display: -webkit-flex;
      flex-direction: row;
      align-items: center;
      align-self: center;
}

.flex-1 {
      flex: 1;
      -webkit-box-flex: 1;
      align-items: center;
}

/* 省略字体 */
.ellipse{
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
}